<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"] - My ASP.NET Application</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

</head>
<body>
    <header class="header">
        <div class="logo">VNG</div>
        <nav class="navigation">
            <ul class="nav-list">
                <li class="nav-item"><a href="#" class="nav-link">Trang chủ</a></li>
                <li class="nav-item"><a href="#" class="nav-link">Tuyển dụng</a></li>
                <li class="nav-item"><a href="#" class="nav-link">Ứng viên</a></li>
                <li class="nav-item"><a href="#" class="nav-link">Quản lý</a></li>
            </ul>
        </nav>
        <div class="auth-buttons">
            <button class="auth-button">Đăng nhập</button>
            <button class="auth-button">Đăng ký</button>
        </div>
    </header>
    <div class="container">
        @RenderBody()
    </div>
    <footer class="footer">
        <div class="footer-left">
            <div class="footer-logo">VNG</div>
            <div class="footer-social">
                <a href="#" class="social-link"><i class="fab fa-facebook-f"></i></a>
                <a href="#" class="social-link"><i class="fab fa-linkedin-in"></i></a>
                <a href="#" class="social-link"><i class="fab fa-youtube"></i></a>
            </div>
            <div class="footer-contact">
                <p><i class="fas fa-phone-alt"></i> (8428) - 3962 3888</p>
            </div>
        </div>
        <div class="footer-center">
            <div class="footer-section">
                <h3 class="footer-title">Về VNG</h3>
                <ul class="footer-list">
                    <li class="footer-item">Sứ mệnh</li>
                    <li class="footer-item">Giá trị cốt lõi</li>
                    <li class="footer-item">Cột mốc chính</li>
                    <li class="footer-item">Ban lãnh đạo cấp cao</li>
                </ul>
            </div>
            <div class="footer-section">
                <h3 class="footer-title">Tin tức</h3>
                <ul class="footer-list">
                    <li class="footer-item">Tin tức mới nhất</li>
                    <li class="footer-item">Thư viện</li>
                </ul>
            </div>
            <div class="footer-section">
                <h3 class="footer-title">Sản phẩm</h3>
                <ul class="footer-list">
                    <li class="footer-item">Trò chơi trực tuyến</li>
                    <li class="footer-item">Zalo & AI</li>
                    <li class="footer-item">Thanh toán và Tài chính</li>
                    <li class="footer-item">Chuyển đổi số</li>
                </ul>
            </div>
            <div class="footer-section">
                <h3 class="footer-title">Con người</h3>
                <ul class="footer-list">
                    <li class="footer-item">Con người VNG</li>
                    <li class="footer-item">Cuộc sống tại VNG</li>
                    <li class="footer-item">Cơ hội nghề nghiệp</li>
                </ul>
            </div>
            <div class="footer-section">
                <h3 class="footer-title">Trách nhiệm cộng đồng</h3>
                <ul class="footer-list">
                    <li class="footer-item">Quỹ Kiến tạo Ước mơ</li>
                    <li class="footer-item">Các chương trình nổi bật</li>
                </ul>
            </div>
        </div>
    </footer>
</body>
</html>
