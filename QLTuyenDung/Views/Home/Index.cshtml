@{
    ViewData["Title"] = "Home Page";
}
<main>
    <h1 class="main-title">Thêm việc làm mới</h1>
    <form class="job-form">
        <div class="form-group">
            <label for="job-id" class="form-label">Mã việc làm</label>
            <input type="text" id="job-id" name="job-id" class="form-input" placeholder="Mã việc làm">
        </div>
        <div class="form-group">
            <label for="salary" class="form-label">Mức lương</label>
            <input type="text" id="salary" name="salary" class="form-input" placeholder="Mức lương">
        </div>
        <div class="form-group">
            <label for="title" class="form-label">Tiêu đề</label>
            <input type="text" id="title" name="title" class="form-input" placeholder="Tiêu đề">
        </div>
        <div class="form-group">
            <label for="create-date" class="form-label">Ngày tạo</label>
            <input type="date" id="create-date" name="create-date" class="form-input" placeholder="Ngày tạo">
        </div>
        <div class="form-group">
            <label for="position" class="form-label">Vị trí</label>
            <input type="text" id="position" name="position" class="form-input" placeholder="Vị trí">
        </div>
        <div class="form-group">
            <label for="end-date" class="form-label">Ngày hết hạn</label>
            <input type="date" id="end-date" name="end-date" class="form-input" placeholder="Ngày hết hạn">
        </div>
        <div class="form-group">
            <label for="description" class="form-label">Mô tả</label>
            <textarea id="description" name="description" class="form-textarea" placeholder="Mô tả"></textarea>
        </div>
        <div class="form-group">
            <label for="status" class="form-label">Trạng thái</label>
            <input type="text" id="status" name="status" class="form-input" placeholder="Trạng thái">
        </div>
        <div class="submit-container">
            <button type="submit" class="submit-button">Thêm mới</button>
        </div>
    </form>
</main>
